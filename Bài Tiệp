Bai 1

#include "stdafx.h"
#include<iostream>
#include<cmath>
#include<iomanip>
using namespace std;
void chuyencoso(int n)
{
	int sodu, i = 0;
	char A[100];
	while (n > 0)
	{
		sodu = n % 2;
		A[i] = '0' + sodu;
		i++;
		n /= 2;
	}
	A[i] = '\0';
	for (i = strlen(A) - 1; i >= 0; i--)
	{
		cout << A[i];
	}
	cout << endl;
}
int main()
{
	int n;
	cin >> n;
	chuyencoso(n);
	return 0;
}
